<Window x:Class="WPF_XAML.wndAblak"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_XAML"
        mc:Ignorable="d"
        Title="Ablak" Height="150" Width="290">
	<Grid x:Name="grRács">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Button Height="23" HorizontalAlignment="Left" Margin="40,0,0,0" x:Name="btÜzenet" VerticalAlignment="Center" Width="75" Click="btÜzenet_Click" 
						Grid.Column="0" Grid.Row="0">Üzenet</Button>
		<Button Height="23" HorizontalAlignment="Right" Margin="0,0,40,0" x:Name="btKilép" VerticalAlignment="Center" Width="75" Click="btKilép_Click"
						Grid.Column="1" Grid.Row="0">Kilép</Button>
	</Grid>

</Window>
